mixin project(o)
  li
    span.key: a(href=o.link)= o.title
    span.def
      block
    span.details= o.details + ' . ' + o.tech

doctype html
html
  head
    meta(charset='utf-8')
    title lleaff's page
    link(rel='stylesheet', href='css/main.css')
  body#index
    section#mainWrapper
      header#mainHeader
        span#mainTitle: a.inner(href='/index.html') lleaff
        nav#headerLinks: ul
          li: a(href='https://github.com/lleaff') GitHub
          li: a(href='https://c9.io/lleaff') Cloud9
      main
        ul.projects
          +project({
            title: 'Dartygazin',
            link: 'https://dphp-lleaff.c9users.io/',
            details: 'Collaboration',
            tech: 'PHP, JS'
          })
            | Mostly static site for an imaginary electronics retail company.
          +project({
            title: 'VieMonJob',
            link: 'https://vismonjobphp-lleaff.c9users.io/',
            details: 'Collaboration',
            tech: 'PHP, JS (jQuery)'
          })
            | Dynamic site for French startup Vie Mon Job. #[br]
            | Features:#[br]
            | Accounts, messaging, job posting, moderation, custom JavaScript UI elements. 
          +project({
            title: 'LynxChanFront',
            link: 'https://github.com/lleaff/LynxChanFront',
            details: 'Solo',
            tech: 'Jade, SASS, JS'
          })
            | Front-end for a forum-type software.
            
    script(src='js/main.js')
