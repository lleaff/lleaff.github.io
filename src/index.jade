mixin scripts
  script(src='js/main.js')

mixin stylesheets
  link(rel='stylesheet', href='css/main.css')

mixin project(o)
  li.project
    span.key: a(href=o.link)= o.title
    span.def!= o.desc
    span.details= o.details + ' . ' + o.tech
  if block
    li.projectPane
      o.pane

mixin projects
  ul(class!=attributes.class, id!=attributes.id)
    +project({
      title: 'VieMonJob',
      link: 'https://vismonjobphp-lleaff.c9users.io/',
      desc: `Dynamic site for French startup Vie Mon Job. <br>
      Features: <br>
      Accounts, messaging, job posting, moderation, custom generic JavaScript UI elements (tabs, notifications, modals).`,
      details: 'Collaboration',
      tech: 'PHP, JS (jQuery)',
    })
      
    +project({
      title: 'Dartygazin',
      link: 'https://dphp-lleaff.c9users.io/',
      desc: 'Mockup for an imaginary electronics retail business. Mix of static and dynamic content (index page is static, categories, product and basket pages are dynamic).',
      details: 'Collaboration',
      tech: 'PHP, JS',
    })

    +project({
      title: 'LynxChanFront',
      link: 'https://github.com/lleaff/LynxChanFront',
      desc: 'Front-end for an imageboard hosting software.',
      details: 'Solo',
      tech: 'Jade, SASS, JS'
    })


