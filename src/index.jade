doctype html
html
  head
    meta(charset='utf-8')
    title lleaff's page
    +stylesheets
  body#index
    section#mainWrapper
      header#mainHeader
        span#mainTitle: a.inner(href='/index.html') lleaff
        nav#headerLinks: ul
          li: a(href='https://github.com/lleaff') GitHub
          li: a(href='https://c9.io/lleaff') Cloud9
          li: a(href='http://stackoverflow.com/users/4718923/lleaff') Stack Overflow
      main
        +projects.projects
            
    +scripts
